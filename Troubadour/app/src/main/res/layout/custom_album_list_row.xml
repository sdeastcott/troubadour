<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_preference_list_selected"
    android:theme="@style/Troubadour_1"
    android:padding="1dip"
    android:weightSum="1"
    tools:ignore="UseCompoundDrawables">

    <com.troubadour.troubadour.CustomClasses.CircleImageView
        android:id="@+id/albumListRowImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="1dp"
        android:theme="@style/Troubadour_1"
        android:contentDescription="@string/listRowAlbumImageDescription"
        app:srcCompat="@mipmap/troubadour_logo_notext_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:theme="@style/Troubadour_1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/albumListRowNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:theme="@style/Troubadour_1"
            android:textAlignment="textStart"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/albumListRowArtistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="1dp"
            android:theme="@style/Troubadour_1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="textStart"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
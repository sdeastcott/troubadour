<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/content_preference_list_selected"
    android:layout_height="match_parent"
    android:padding="1dip"
    android:weightSum="1"
    tools:ignore="UseCompoundDrawables">

    <com.troubadour.troubadour.CustomClasses.CircleImageView
        android:id="@+id/artistListRowImageView"
        android:theme="@style/Troubadour_1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="1dp"
        android:contentDescription="@string/listRowAlbumImageDescription"
        app:srcCompat="@mipmap/troubadour_logo_notext_dark" />

    <TextView
        android:id="@+id/artistListRowNameView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

</LinearLayout>